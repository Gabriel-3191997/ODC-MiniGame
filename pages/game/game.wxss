.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(#020617, #1e293b);
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
}

.subtitle {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  color: #64748b;
}

.message {
  font-size: 26rpx;
  color: #e5e7eb;
}

